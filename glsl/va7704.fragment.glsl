	float aspect_ratio = resolution.x / resolution.y;
	float c = 0.0;
	float n = 10.0;
	c = (1.0 + snoise(vec2(uv.x * n * aspect_ratio, uv.y * n + time))) * 0.5;
	//c = fbm(vec3(uv.x * n * aspect_ratio, uv.y * n, sin(time)));
	vec3 col = vec3(c, c, c);
	
	gl_FragColor = vec4(col,1.0);
