mat3 m = mat3( 0.00,  0.80,  0.60,
              -0.80,  0.36, -0.48,
              -0.60, -0.48,  0.64 );

float noise( vec3 p ) {
	return (snoise(p.xy) + 1.0) * 0.5;
}

float fbm( vec3 p ) {
	float f = 0.0;
	
	f += 0.5000*noise( p ); p = m*p*2.02;
	f += 0.2500*noise( p ); p = m*p*2.03;
	f += 0.1250*noise( p ); p = m*p*2.01;
	f += 0.0625*noise( p );
	
	return f/0.9375;
}
